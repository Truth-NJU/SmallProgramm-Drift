.emo {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  outline: thin solid black;
}

.emo-title {
  flex-basis: 10vh;
  display: flex;
  align-self: center;
  align-items: center;
}

.emoPage {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 80vh;
  overflow: hidden;
  padding: 5% 0 0 0;
  overflow-y: scroll;
}

.emo-statistics {
  display: flex;
  width: 100%;
  flex-basis: 20%;
  flex-grow: 0;
}

.emo-rate {
  flex-basis: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.emo-detail {
  width: 50%;
  display: flex;
  justify-items: space-around;
  flex-wrap: wrap;
  padding-right: 4px;
}

.emo-detail-title {
  width: 100%;
  font-size: 16px;
  color: #1989fa;
}

.emo-detail-item {
  width: 10px;
  height: 20px;
  background-color: red;
  margin: 0px 1px 0px 1px;
}


.emo-compare {
  display: flex;
  width: 100%;
  flex-basis: 15%;
  flex-grow: 0;
  padding: 2px 4px 2px 4px;
  font-size: 14px;
}

.emo-tips {
  display: flex;
  flex-direction: column;
  flex-basis: 25%;
  width: 100%;
  padding: 2px 4px 2px 4px;
  flex-grow: 1;
  font-size: 14px;
}

.van-circle__text {
  height: 80% !important;
  width: 80% !important;
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  justify-content: center !important;
  left: 10% !important;
  white-space: pre-line !important;
  font-family: 'FZJingHeiS-R-GB' !important;
}

.nav2 {
  padding: 10rpx;
  background-color: skyblue;
  height: 100rpx;
  opacity: 0.9;
  border-bottom: thin solid whitesmoke;
}

.re {
  display: flex;
  justify-content: center;
  line-height: 60rpx;
  align-content: center;
  width: 150rpx;
  border-radius: 20rpx;
  position: relative;
  bottom: 0;
}